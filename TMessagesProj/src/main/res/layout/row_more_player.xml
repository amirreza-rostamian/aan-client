<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:minHeight="@dimen/_70sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30">

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/tv_more_player_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/colorLight"
                    android:textSize="@dimen/default_font" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:gravity="center">

                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                    android:id="@+id/tv_more_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/large_font" />

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/tv_more_player_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_more_player_name"
                    android:gravity="center|right"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/colorLight"
                    android:textSize="@dimen/small_font"
                    android:visibility="gone" />

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/tv_more_player_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_more_player_province"
                    android:gravity="center|right"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/colorLight"
                    android:textSize="@dimen/small_font"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30">

                <me.himanshusoni.chatmessageview.ui.ProgressView
                    android:id="@+id/pv_more_player_content"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:hive_animDuration="5000"
                    app:hive_color="@color/colorAccent"
                    app:hive_cornerRadius="20"
                    app:hive_maxAlpha="255"
                    app:hive_rainbow="true"
                    app:hive_shrink="true" />

                <me.himanshusoni.chatmessageview.ui.CircleImageView
                    android:id="@+id/imv_more_player_icon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerInParent="true"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/_2sdp" />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>