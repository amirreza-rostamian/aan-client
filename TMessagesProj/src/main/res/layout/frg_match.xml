<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:srcCompat="@drawable/poll" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:id="@+id/tvQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorGray" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <me.himanshusoni.chatmessageview.ui.ProgressView
                                android:id="@+id/pv_loading_pic_question"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                app:hive_animDuration="5000"
                                app:hive_color="@color/colorAccent"
                                app:hive_cornerRadius="20"
                                app:hive_maxAlpha="255"
                                app:hive_rainbow="true"
                                app:hive_shrink="true" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/img_question"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitXY"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <me.himanshusoni.chatmessageview.ui.BottomPicker.view.TedSquareFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <me.himanshusoni.chatmessageview.VideoPlayer.JzvdStd
                                android:id="@+id/video_question"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:visibility="gone" />

                        </me.himanshusoni.chatmessageview.ui.BottomPicker.view.TedSquareFrameLayout>

                        <LinearLayout
                            android:id="@+id/ll_voice_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_player_voice_question"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:maxLength="10"
                                    android:text="00:00"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorLight" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.6"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatSeekBar
                                        android:id="@+id/seekbar_voice_question"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:progress="0"
                                        android:scrollbarSize="2dp" />

                                </LinearLayout>

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_player_time_voice_question"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:maxLength="10"
                                    android:text="00:00"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorLight" />

                            </LinearLayout>

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_voice_question"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:tag="pause"
                                android:tint="@color/colorLight"
                                app:srcCompat="@drawable/ic_pause" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvOptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:visibility="gone">

                        </android.support.v7.widget.RecyclerView>


                        <me.himanshusoni.chatmessageview.ui.MEditText
                            android:id="@+id/et_text_answer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_margin="@dimen/_15sdp"
                            android:background="@drawable/stroke_bgr"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/large_font"
                            android:visibility="gone" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignTop="@+id/cardViewQuestion"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_minus40sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/purple_card" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_match_score"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="50"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="@string/scores"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/large_font" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_match_number"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="50"
                                    android:gravity="center|right"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/large_font" />

                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <me.himanshusoni.chatmessageview.ui.StepIndicator
            android:id="@+id/match_step_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            app:siBackgroundColor="@color/colorLightGray"
            app:siStepColor="@color/colorAccent" />

    </LinearLayout>


    <include
        android:id="@+id/pv_match"
        layout="@layout/view_loading" />

    <RelativeLayout
        android:id="@+id/rl_quize_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:fitsSystemWindows="true">


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardViewContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/img_match_emo"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    app:srcCompat="@drawable/amir" />

                                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                    android:id="@+id/tv_match_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorLight"
                                    android:textSize="@dimen/default_font" />


                                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                    android:id="@+id/tv_match_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_30sdp"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/large_font" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <me.himanshusoni.chatmessageview.ui.MButton
                                        android:id="@+id/btn_continue_quiz"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="70"
                                        android:background="@color/colorAccent"
                                        android:text="@string/continues"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/default_font" />

                                    <me.himanshusoni.chatmessageview.ui.MButton
                                        android:id="@+id/btn_cancel_quize"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="30"
                                        android:background="@color/colorAccent"
                                        android:text="@string/cancel"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/default_font" />

                                </LinearLayout>
                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </RelativeLayout>


                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>


</RelativeLayout>


