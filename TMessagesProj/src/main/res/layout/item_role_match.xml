<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:orientation="vertical"
    android:padding="1sp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#ffffff"
        app:cmv_backgroundColorPressed="#ffffff"
        app:cmv_contentPadding="0dp"
        app:cmv_cornerRadius="@dimen/_6sdp"
        app:cmv_showArrow="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:textColor="#424242">

                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                    android:id="@+id/txt_item_roleMatch_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/titleRoleMatch"
                    android:textColor="@color/colorBlack" />

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/txt_item_roleMatch_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="right|center"
                    android:padding="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/colorBlack" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <me.himanshusoni.chatmessageview.ui.MTextView
                        android:id="@+id/txt_item_roleMatch_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/_3sdp"
                        android:text="19:41"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_11sdp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_all_check" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/colorGreen" />


        </LinearLayout>
    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ui.MButton
        android:id="@+id/btn_item_roleMatch_participation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/shape_rect_bg_btn_role"
        android:gravity="center"
        android:text="ستاره بگیر!!"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>

