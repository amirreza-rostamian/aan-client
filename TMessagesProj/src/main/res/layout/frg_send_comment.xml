<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_about_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="100">

        <me.himanshusoni.chatmessageview.ui.MEditText
            android:id="@+id/et_comment_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="91"
            android:background="@drawable/stroke_bgr"
            android:gravity="right"
            android:hint="اینجا می تونی برای هر کدوم از عوامل ساخت برنامه که دوست داشته باشی پیغام بگذاری. فقط کافیه اسم یا سمتشو اول پیغامت بنویسی تا ما به گوشش برسونیم."
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_10sdp" />


        <me.himanshusoni.chatmessageview.ui.MButton
            android:id="@+id/btn_submit_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />

    </LinearLayout>

    <include
        android:id="@+id/pv_send_comment"
        layout="@layout/view_loading"
        android:visibility="gone" />

</RelativeLayout>
