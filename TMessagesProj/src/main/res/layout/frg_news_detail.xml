<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/imv_news_detail_header_bgr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:fitsSystemWindows="true"
                android:minHeight="200dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <me.himanshusoni.chatmessageview.ui.ProgressView
                android:id="@+id/pv_news_detail"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_50sdp"
                app:hive_animDuration="5000"
                app:hive_color="@color/colorAccent"
                app:hive_cornerRadius="20"
                app:hive_maxAlpha="255"
                app:hive_rainbow="true"
                app:hive_shrink="true" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/details"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />

                        <me.himanshusoni.chatmessageview.ui.JustifiedTextView
                            android:id="@+id/tv_news_detail_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/details"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/large_font" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp">

                            <me.himanshusoni.chatmessageview.ui.LikeView.LikeView
                                android:id="@+id/imv_news_like"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                app:like_canCancel="true"
                                app:like_hasFly="true"
                                app:like_iconSize="@dimen/_16sdp"
                                app:like_textSize="@dimen/default_font" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_news_comment"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:alpha="0.3"
                                android:padding="@dimen/_2sdp"
                                app:srcCompat="@drawable/ic_comment" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_news_share"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:alpha="0.3"
                                android:padding="@dimen/_2sdp"
                                app:srcCompat="@drawable/ic_share_post" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.3"
                                    android:padding="@dimen/_4sdp"
                                    app:srcCompat="@drawable/ic_view" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_news_view_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_15sdp"
                                    android:text="0"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/default_font" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_news_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_margin="@dimen/_5sdp"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
