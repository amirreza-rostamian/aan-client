<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    card_view:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_pic_user_more"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:alpha="0.3"
                android:padding="@dimen/_8sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/imv_pic_user_avatar"
                android:orientation="vertical"
                android:weightSum="100">


                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                    android:id="@+id/tv_pic_user_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="right|bottom"
                    android:paddingRight="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/default_font" />

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/tv_pic_user_score"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="right|top"
                    android:paddingRight="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLight"
                    android:textSize="@dimen/default_font" />


            </LinearLayout>


            <me.himanshusoni.chatmessageview.ui.CircleImageView
                android:id="@+id/imv_pic_user_avatar"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_3sdp"
                android:layout_weight="0.3"
                android:src="@drawable/amir"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


        </RelativeLayout>

        <me.himanshusoni.chatmessageview.ui.BottomPicker.view.TedSquareFrameLayout
            android:id="@+id/vImageRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_pic_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                android:scaleType="centerCrop" />

            <me.himanshusoni.chatmessageview.ui.ProgressView
                android:id="@+id/pv_loading_pic_user"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                app:hive_animDuration="5000"
                app:hive_color="@color/colorAccent"
                app:hive_cornerRadius="20"
                app:hive_maxAlpha="255"
                app:hive_rainbow="true"
                app:hive_shrink="true" />


        </me.himanshusoni.chatmessageview.ui.BottomPicker.view.TedSquareFrameLayout>

        <me.himanshusoni.chatmessageview.ui.MTextViewBold
            android:id="@+id/tv_pic_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:gravity="right|center"
            android:paddingRight="@dimen/_15sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/large_font" />

        <me.himanshusoni.chatmessageview.ui.MTextView
            android:id="@+id/tv_pic_user_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:gravity="right|center"
            android:paddingRight="@dimen/_15sdp"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/default_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.2"
            android:background="@color/colorLight"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnMore"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:padding="@dimen/_4sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_favorite" />

            <me.himanshusoni.chatmessageview.ui.LikeView.LikeView
                android:id="@+id/imv_pic_user_like"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                app:like_canCancel="true"
                app:like_hasFly="true"
                app:like_iconSize="@dimen/_16sdp"
                app:like_textSize="@dimen/default_font" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_pic_user_comment"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_comment" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_pic_user_share"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_share_post" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_view" />

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/tv_pic_user_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/default_font" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_pic_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_margin="@dimen/_5sdp"></android.support.v7.widget.RecyclerView>

        <me.himanshusoni.chatmessageview.ui.MTextView
            android:id="@+id/tv_pic_user_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="@string/view_more_comment"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/default_font" />

    </LinearLayout>
</android.support.v7.widget.CardView>