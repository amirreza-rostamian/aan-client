<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="false"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">


                <me.himanshusoni.chatmessageview.VideoPlayer.JzvdStd
                    android:id="@+id/media_video"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_190sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:id="@+id/btn_video_play"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@drawable/selector_sub_category"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/show_video"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_font" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:id="@+id/tv_price_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text="@string/free"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorRed" />


                        <LinearLayout
                            android:id="@+id/ll_media_video_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <me.himanshusoni.chatmessageview.ui.MRatingBar
                                android:id="@+id/rb_rate_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:clickable="false"
                                android:isIndicator="true"
                                android:minHeight="@dimen/_20sdp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:rating="0"
                                android:stepSize="0.01" />

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:id="@+id/tv_point_video"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="4.7"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:id="@+id/tv_director_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="0.3"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <me.himanshusoni.chatmessageview.ui.ProgressView
                                android:id="@+id/pv_loading_pic_video"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/_50sdp"
                                app:hive_animDuration="5000"
                                app:hive_color="@color/colorAccent"
                                app:hive_cornerRadius="20"
                                app:hive_maxAlpha="255"
                                app:hive_rainbow="true"
                                app:hive_shrink="true" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_thumbnail_video"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_12sdp"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="25"
                        android:background="@drawable/selector_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:id="@+id/tv_media_video_volume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/large_font" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/volume"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="25"
                        android:background="@drawable/selector_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:id="@+id/tv_media_video_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/default_font" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/category"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="25"
                        android:background="@drawable/selector_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:id="@+id/tv_media_video_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/large_font" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:id="@+id/tv_media_game_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:text="امتیاز"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="25"
                        android:background="@drawable/selector_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                            android:id="@+id/tv_media_video_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/large_font" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/view"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <me.himanshusoni.chatmessageview.ui.JustifiedTextView
                            android:id="@+id/tv_summary_video"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_30sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_30sdp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorBlack" />

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/cardViewContent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_minus20sdp"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <me.himanshusoni.chatmessageview.ui.MButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_summary_book"
                            android:text="@string/gift_book"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/default_font"
                            android:visibility="invisible" />

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_6sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/summary_video"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/large_font" />
                        </android.support.v7.widget.CardView>

                        <!---->


                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tv_session_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <me.himanshusoni.chatmessageview.ui.MTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="right|center"
                        android:text="@string/more_view"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/large_font" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_menu" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_video_detail_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:clipToPadding="false" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_media_video_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginTop="@dimen/_10sdp"></android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/pv_video_detail_loading"
            layout="@layout/view_loading"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/frame_video_vitrin_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true" />

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>


