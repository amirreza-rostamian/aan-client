<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:orientation="vertical"
    android:padding="1sp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="@color/colorWhite"
        app:cmv_backgroundColorPressed="@color/colorWhite"
        app:cmv_contentPadding="0dp"
        app:cmv_cornerRadius="@dimen/_6sdp"
        app:cmv_showArrow="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:id="@+id/txt_item_textMatchOther_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:gravity="right"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    tools:text="مسابقه تا چند ثانیه دیگه شروع میشه" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <me.himanshusoni.chatmessageview.ui.MTextView
                        android:id="@+id/txt_item_textMatchOther_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_8sdp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        app:srcCompat="@drawable/ic_all_check" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>

