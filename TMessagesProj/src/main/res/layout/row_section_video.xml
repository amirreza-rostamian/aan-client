<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_section_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.himanshusoni.chatmessageview.VideoPlayer.JzvdStd
                android:id="@+id/section_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <me.himanshusoni.chatmessageview.ui.MTextViewBold
        android:id="@+id/tv_section_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/default_font"
        android:visibility="gone" />

</LinearLayout>