<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.himanshusoni.chatmessageview.ui.ProgressView
        android:id="@+id/pv_loading_active_wallet"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_cornerRadius="20"
        app:hive_maxAlpha="255"
        app:hive_rainbow="true"
        app:hive_shrink="true" />


    <RelativeLayout
        android:id="@+id/rl_active_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_wallet_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <me.himanshusoni.chatmessageview.ui.MTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/how_to_active_wallet_static"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLight"
                    android:textSize="@dimen/default_font" />

                <me.himanshusoni.chatmessageview.ui.JTextView
                    android:id="@+id/tv_dialog_wallet_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/large_font" />

                <me.himanshusoni.chatmessageview.ui.MEditText
                    android:id="@+id/et_dialog_wallet_active_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/stroke_bgr"
                    android:gravity="center"
                    android:hint="@string/voucher_hint_static"
                    android:inputType="number"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/large_font" />

                <me.himanshusoni.chatmessageview.ui.MButton
                    android:id="@+id/btn_submit_dialog_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/active"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_font" />
            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>