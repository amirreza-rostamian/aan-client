<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp">

        <me.himanshusoni.chatmessageview.ui.ProgressView
            android:id="@+id/pv_league_view_loading"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:hive_animDuration="5000"
            app:hive_color="@color/colorAccent"
            app:hive_cornerRadius="20"
            app:hive_maxAlpha="255"
            app:hive_rainbow="true"
            app:hive_shrink="true" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imv_league_view_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_5sdp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_minus40sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.himanshusoni.chatmessageview.ui.RtlTabLayout
                android:id="@+id/tab_league_view"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@android:color/white"
                android:visibility="gone"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorBlack"
                app:tabIndicatorHeight="@dimen/_1sdp"
                app:tabMode="fixed"
                app:tabPaddingEnd="@dimen/_2sdp"
                app:tabPaddingStart="@dimen/_2sdp"
                app:tabTextColor="@color/colorLight" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_league_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_league_view_Item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tab_league_view"
                android:visibility="gone" />

            <include
                android:id="@+id/empty_league_data"
                layout="@layout/view_empty_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_league_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_140sdp"
                            android:visibility="gone">

                            <me.himanshusoni.chatmessageview.ui.ProgressView
                                android:id="@+id/pv_league_detail_loading"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_130sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                app:hive_animDuration="5000"
                                app:hive_color="@color/colorAccent"
                                app:hive_cornerRadius="20"
                                app:hive_maxAlpha="255"
                                app:hive_rainbow="true"
                                app:hive_shrink="true" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_league_detail_banner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fitsSystemWindows="true"
                                android:scaleType="fitXY" />

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_league_view_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="100">

                                <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                    android:id="@+id/tv_league_detail_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_weight="30"
                                    android:gravity="center"
                                    android:text="@string/league_detail"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/default_font" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_weight="70"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50"
                                        android:orientation="vertical"
                                        android:weightSum="100">

                                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                            android:id="@+id/tv_end_league_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:gravity="center"
                                            android:text="00:00"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/large_font" />


                                        <me.himanshusoni.chatmessageview.ui.MTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:gravity="center"
                                            android:text="@string/end_league"
                                            android:textColor="@color/colorLight"
                                            android:textSize="@dimen/default_font" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50"
                                        android:orientation="vertical"
                                        android:weightSum="100">

                                        <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                            android:id="@+id/tv_start_league_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:gravity="center"
                                            android:text="00:00"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/large_font" />


                                        <me.himanshusoni.chatmessageview.ui.MTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:gravity="center"
                                            android:text="@string/start_league"
                                            android:textColor="@color/colorLight"
                                            android:textSize="@dimen/default_font" />


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.JustifiedTextView
                                android:id="@+id/tv_league_detail_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/large_font" />


                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_league_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:visibility="gone" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>