<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreen"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetEnd="0dp"
    android:contentInsetRight="0dp"
    android:elevation="0dp"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_main_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_search" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_main_help"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_help_black" />


            <me.himanshusoni.chatmessageview.ui.MTextView
                android:id="@+id/tv_main_header_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_45sdp"
                android:text="@string/main_top_title"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_home_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_back2" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imv_home_notification"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_arrow_back2" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_score_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_score_top"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="50"
                    android:background="@drawable/purple_card"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="100">

                    <me.himanshusoni.chatmessageview.ui.MTextViewBold
                        android:id="@+id/tv_program_score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:gravity="center|right"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_font" />


                    <me.himanshusoni.chatmessageview.ui.MTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="@string/get_score"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_font" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="100">

                    <me.himanshusoni.chatmessageview.ui.MTextViewBold
                        android:id="@+id/tv_program_chance"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/large_font" />


                    <me.himanshusoni.chatmessageview.ui.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="@string/total_rate"
                        android:textColor="@color/colorLight"
                        android:textSize="@dimen/default_font" />


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.Toolbar>
