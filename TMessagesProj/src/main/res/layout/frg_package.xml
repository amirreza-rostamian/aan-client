<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_package"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:id="@+id/tv_buy_package"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/selector_sub_category"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/buy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_font" />

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:id="@+id/tv_media_package_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorRed"
                                android:textSize="@dimen/default_font" />


                        </LinearLayout>


                        <me.himanshusoni.chatmessageview.ui.JTextView
                            android:id="@+id/tv_package_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="70"
                            android:gravity="center|right"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/default_font" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardPreventCornerOverlap="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <me.himanshusoni.chatmessageview.ui.ProgressView
                                android:id="@+id/pv_loading_pic_package"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/_50sdp"
                                app:hive_animDuration="5000"
                                app:hive_color="@color/colorAccent"
                                app:hive_cornerRadius="20"
                                app:hive_maxAlpha="255"
                                app:hive_rainbow="true"
                                app:hive_shrink="true" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imv_banner_package"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:background="@color/colorLightGray"
                                android:fitsSystemWindows="true"
                                android:scaleType="centerCrop" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp"
                        android:weightSum="100">

                        <LinearLayout
                            android:id="@+id/ll_media_package_category"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="25"
                            android:background="@drawable/selector_gray"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:id="@+id/tv_media_package_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/default_font" />

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/category"
                                android:textColor="@color/colorLight"
                                android:textSize="@dimen/default_font" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_media_package_rating"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="25"
                            android:background="@drawable/selector_gray"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:id="@+id/tv_media_package_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/large_font" />

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:text="امتیاز"
                                android:textColor="@color/colorLight"
                                android:textSize="@dimen/default_font" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_media_package_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="25"
                            android:background="@drawable/selector_gray"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:id="@+id/tv_media_package_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/large_font" />

                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/view"
                                android:textColor="@color/colorLight"
                                android:textSize="@dimen/default_font" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rating_media_package"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="@dimen/_45sdp"
                        android:orientation="vertical">

                        <me.himanshusoni.chatmessageview.ui.MRatingBar
                            android:id="@+id/rb_media_package"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:minHeight="@dimen/_20sdp"
                            android:numStars="5"
                            android:progressDrawable="@drawable/rating_bar"
                            android:rating="0"
                            android:stepSize="0.01" />

                        <me.himanshusoni.chatmessageview.ui.MTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="4"
                            android:text="@string/your_rating"
                            android:textColor="@color/colorLight"
                            android:textSize="@dimen/default_font" />

                    </LinearLayout>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_package_game"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:id="@+id/category_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:minHeight="@dimen/_35sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="@string/game"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/large_font" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_package_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_package_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:minHeight="@dimen/_35sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="@string/video"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/large_font" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_package_video"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_package_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:minHeight="@dimen/_35sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="@string/book"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/large_font" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_package_book"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_package_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:minHeight="@dimen/_35sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="@string/music"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/large_font" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_package_music"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_media_package_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"></android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </ScrollView>


        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/pv_package_loading"
            layout="@layout/view_loading"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>