<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:clickable="true">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:id="@+id/ll_top_bgr"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/profile_back_bgr"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:alpha="0.5"
            android:background="@color/colorGray"
            android:scaleType="fitXY" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@color/white"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_40sdp">

                <ir.amin.HaftTeen.ui.Components.BackupImageView
                    android:id="@+id/imv_user_pic"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_76sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp" />

            </RelativeLayout>

            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginRight="@dimen/_90sdp"
                android:gravity="right|center"
                android:paddingLeft="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/large_font" />

            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                android:id="@+id/tv_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginRight="@dimen/_90sdp"
                android:gravity="right|center"
                android:text="09*********"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_100sdp"
                android:clickable="true"
                android:orientation="vertical">


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/_70sdp"
                            android:paddingBottom="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/rl_wallet"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:padding="@dimen/_5sdp"
                                            app:tint="@color/colorLight"
                                            app:srcCompat="@drawable/profile_gift" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <me.himanshusoni.chatmessageview.ui.MTextView
                                                android:id="@+id/tv_credit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="4dp"
                                                android:alpha="0.7"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:text="@string/credit"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/large_font" />

                                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                                android:id="@+id/tv_profile_balance"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:alpha="0.7"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:text="0"
                                                android:textColor="@color/colorGrey"
                                                android:textSize="@dimen/default_font" />

                                        </LinearLayout>


                                    </LinearLayout>

                                    <me.himanshusoni.chatmessageview.ui.MTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:visibility="invisible"
                                        android:text="@string/profile_text_wallet"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/_5sdp" />

                                </LinearLayout>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight"
                                android:gravity="center" />

                            <RelativeLayout
                                android:id="@+id/rl_scores"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:padding="@dimen/_5sdp"
                                            app:tint="@color/colorLight"
                                            app:srcCompat="@drawable/profile_score" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <me.himanshusoni.chatmessageview.ui.MTextView
                                                android:id="@+id/tv_profile_score_title"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="4dp"
                                                android:alpha="0.7"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:text="@string/score"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/large_font" />

                                            <me.himanshusoni.chatmessageview.ui.MTextViewBold
                                                android:id="@+id/tv_profile_score"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:alpha="0.7"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:text="0"
                                                android:textColor="@color/colorGrey"
                                                android:textSize="@dimen/default_font" />

                                        </LinearLayout>


                                    </LinearLayout>

                                    <me.himanshusoni.chatmessageview.ui.MTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:visibility="invisible"
                                        android:text="@string/profile_text_score"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="@dimen/_5sdp" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_add_account"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_add" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_profile_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.7"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/add"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_save_message"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_cloud" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_cloud_messege"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.7"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/cloudmsg"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_invite"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_add_friend" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_invite_friend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:alpha="0.7"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/Invite"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:alpha="0.1"
                                android:background="@color/colorPrimary" />


                            <me.himanshusoni.chatmessageview.ui.MTextView
                                android:id="@+id/tv_profile_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center|right"
                                android:text="@string/VoipOfflineOpenSettings"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/default_font" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_notification"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="5"
                                    android:alpha="0.3"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_arrow_back" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_profile_notificationsandsounds"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="80"
                                    android:gravity="center|right"
                                    android:text="@string/NotificationsAndSounds"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_notif" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight" />

                            <LinearLayout
                                android:id="@+id/ll_theme"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="5"
                                    android:alpha="0.3"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_arrow_back" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_profile_theme"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="80"
                                    android:gravity="center|right"
                                    android:text="@string/Theme"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_theme" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight" />

                            <LinearLayout
                                android:id="@+id/ll_select_language"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="5"
                                    android:alpha="0.3"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_arrow_back" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_profile_language"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="80"
                                    android:gravity="center|right"
                                    android:text="@string/Language"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_language" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight" />

                            <LinearLayout
                                android:id="@+id/ll_secure"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="5"
                                    android:alpha="0.3"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_arrow_back" />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_privacy"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="80"
                                    android:gravity="center|right"
                                    android:text="@string/PrivacySettings"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/colorLight"
                                    app:srcCompat="@drawable/profile_secure" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:id="@+id/ll_more_setting"
                                android:orientation="horizontal">


                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="80"
                                    android:id="@+id/tv_more_setting"
                                    android:gravity="center"
                                    android:alpha="0.3"
                                    android:text="@string/more_setting"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/default_font" />



                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorPrimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:id="@+id/tv_version"
                                    android:textColor="@color/colorLight"
                                    android:gravity="center"
                                    />

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:id="@+id/tv_app_version"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="90"
                                    android:gravity="center|right"
                                    android:text="@string/profile_version"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_logo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:alpha="0.1"
                                android:background="@color/colorLight" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <me.himanshusoni.chatmessageview.ui.MTextView
                                    android:layout_width="0dp"
                                    android:id="@+id/tv_profile_update"
                                    android:layout_height="match_parent"
                                    android:layout_weight="90"
                                    android:gravity="center|right"
                                    android:text="@string/profile_update"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/large_font" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:padding="@dimen/_5sdp"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/ic_logo" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
